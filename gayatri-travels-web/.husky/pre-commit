cd ./gayatri-travels-web && npx lint-staged

npm run check-lint || (
    echo 'ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
    false
)

npm run check-types || (
    echo 'Types Check Failed. Make the required changes listed above, add changes and try to commit again.'
    false
)

npm run check-spell || (
    echo 'CSpell. Make the required changes listed above, add changes and try to commit again.'
    false
)

npm run test || (
    echo 'Tests Check Failed. Make the required changes listed above, add changes and try to commit again.'
    false
)
